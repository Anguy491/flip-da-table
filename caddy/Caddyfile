game.anguy.dev {
	encode gzip
	log {
		output stdout
		format json
	}

	reverse_proxy /api/* backend:8080 {
		header_up Host {host}
		header_up X-Real-IP {remote_host}
		header_up X-Forwarded-For {remote_host}
		header_up X-Forwarded-Proto {scheme}
	}
	reverse_proxy /ws backend:8080 {
		header_up Host {host}
		header_up X-Real-IP {remote_host}
		header_up X-Forwarded-For {remote_host}
		header_up X-Forwarded-Proto {scheme}
		transport http {
			versions h1
		}
	}

	reverse_proxy frontend:80
}
